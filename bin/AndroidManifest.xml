<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.foodcomposer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
         <activity
            android:name="com.foodcomposer.DaftarMakananActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.foodcomposer.DaftarMakananActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.foodcomposer.SimpanMakananActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.foodcomposer.SimpanMakananActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.foodcomposer.SimpanBahanMakananActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.foodcomposer.SimpanBahanMakananActivity"/>

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.foodcomposer.CariActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.foodcomposer.CariActivity"/>

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.foodcomposer.HasilCariActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.foodcomposer.HasilCariActivity"/>

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
